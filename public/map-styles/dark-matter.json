{
  "version": 8,
  "name": "Dark Matter",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://openmaptiles.github.io/dark-matter-gl-style/sprite",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "rgb(12,12,12)" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["all", ["==", "$type", "Polygon"], ["!=", "brunnel", "tunnel"]],
      "paint": { "fill-color": "rgb(27,27,29)" }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "maxzoom": 9,
      "filter": ["all", ["==", "$type", "Polygon"], ["==", "class", "residential"]],
      "paint": { "fill-color": "hsl(0, 2%, 5%)", "fill-opacity": 0.4 }
    },
    {
      "id": "landuse_park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["all", ["==", "$type", "Polygon"], ["==", "class", "park"]],
      "paint": { "fill-color": "rgb(32,32,32)" }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "filter": ["==", "$type", "LineString"],
      "paint": { "line-color": "rgb(27,27,29)" }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 12,
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "rgb(10,10,10)",
        "fill-outline-color": "rgb(27,27,29)"
      }
    },
    {
      "id": "highway_path",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "path"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgb(27,27,29)",
        "line-dasharray": [1.5, 1.5],
        "line-width": { "base": 1.2, "stops": [[13, 1], [20, 10]] }
      }
    },
    {
      "id": "highway_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 8,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "minor", "service", "track"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#181818",
        "line-width": { "base": 1.55, "stops": [[13, 1.8], [20, 20]] }
      }
    },
    {
      "id": "highway_major_casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 11,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "primary", "secondary", "tertiary", "trunk"]],
      "layout": { "line-join": "miter", "line-cap": "butt" },
      "paint": {
        "line-color": "rgba(60,60,60,0.8)",
        "line-width": { "base": 1.3, "stops": [[10, 3], [20, 23]] }
      }
    },
    {
      "id": "highway_major_inner",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 11,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "primary", "secondary", "tertiary", "trunk"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "hsl(0, 0%, 7%)",
        "line-width": { "base": 1.3, "stops": [[10, 2], [20, 20]] }
      }
    },
    {
      "id": "highway_motorway_casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 6,
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "motorway"]],
      "layout": { "line-join": "miter", "line-cap": "butt" },
      "paint": {
        "line-color": "rgba(60,60,60,0.8)",
        "line-width": { "base": 1.4, "stops": [[6, 3], [20, 40]] }
      }
    },
    {
      "id": "highway_motorway_inner",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 6,
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "motorway"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#000",
        "line-width": { "base": 1.4, "stops": [[6, 1.3], [20, 30]] }
      }
    },
    {
      "id": "railway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "rail"], ["!has", "service"]],
      "layout": { "line-join": "round" },
      "paint": {
        "line-color": "rgb(35,35,35)",
        "line-width": { "base": 1.3, "stops": [[16, 3], [20, 7]] }
      }
    }
  ]
}
